<UserControl x:Class="Lab05.View.OrdersUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab05.View" xmlns:Converter="clr-namespace:Lab05.Converter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Converter:ImagePathConverter x:Key="my:ImagePathConverter" />
    </UserControl.Resources>
    <Grid ShowGridLines="True">
        <DataGrid IsReadOnly="True" AutoGenerateColumns="True" ItemsSource="{Binding Path=Orders}">
        </DataGrid>
    </Grid>
</UserControl>
